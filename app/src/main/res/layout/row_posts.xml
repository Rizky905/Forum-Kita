<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="192dp">

        <TextView
            android:id="@+id/uJurusanTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:text="Jurusan"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/blackdope"/>

        <TextView
            android:id="@+id/pTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/uJurusanTv"
            android:layout_marginTop="10dp"
            android:text=", 33min"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/blackdope"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pTitleTv"
            android:text="ini Title"
            android:layout_below="@+id/uJurusanTv"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:autoLink="all"
            android:textColor="@color/blackdope"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pDescriptionTv"
            android:text="ini deskripsi"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/pTitleTv"
            android:layout_marginLeft="38dp"
            android:textSize="18dp"
            android:autoLink="all"
            android:textColor="@color/blackdope"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pDescriptionTv"
            android:id="@+id/pLikesTv"
            android:layout_marginTop="12dp"
            android:text="2 Terimakasih"
            android:layout_marginLeft="12dp"
            android:textColor="@color/blackdope"/>
        
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/uPicture"
            android:src="@drawable/user_acc_ic"
            android:scaleType="centerCrop"
            android:layout_below="@+id/pLikesTv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uNameTv"
            android:text="nama"
            android:layout_toRightOf="@+id/uPicture"
            android:layout_below="@+id/pLikesTv"
            android:layout_marginTop="22dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blackdope"/>

        <Button
            android:id="@+id/jawabBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/uPicture"
            android:backgroundTint="@color/white"
            android:text="JAWAB"
            android:textColor="@color/grenn"
            android:textStyle="bold" />
        


    </RelativeLayout>


